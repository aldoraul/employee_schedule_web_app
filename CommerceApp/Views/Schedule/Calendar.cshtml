@model CommerceApp.Models.CalendarDate 
@{
    ViewBag.Title = "Calendar";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .image {
            background-color: white;
            float: right;
            width: 30%;
            content: url(/Content/themes/base/images/commerce_long.png);
        }

        .calendarSize {
            margin: 0 auto;
            height: 60%;
            width: 60%;
        }

        .imgFloatRight {
            position: absolute;
            right: 15px;
            top: -12px;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <title>Comerece Schedule</title>
    <link rel='stylesheet' type='text/css' href='~/Content/fullcalendar.css' />
    <script type='text/javascript' src='~/scripts/jquery-2.1.3.min.js'></script>
    <script type='text/javascript' src='~/scripts/fullcalendar.js'></script>
    <meta name="description" content="The description of my page" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:rgb(19, 104, 136)">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a style="color:white;" href="/Home/Index">Home<span class="sr-only">(current)</span></a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown" style="color:white;" href="#">Schedule <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Schedule/Calendar">View Schedule</a></li>
                            <li><a href="/Schedule/Delete">Delete Schedule</a></li>
                            <li><a href="/Schedule/ExportPdf">Generate PDF</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" style="color:white;" href="#">Employees <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Employees/Index">Employee Table</a></li>
                            <li><a href="/Employees/Create">Create Employee</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" style="color:white;" href="#">Shifts <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Shifts/Create">Create Shift</a></li>
                            <li><a href="/Shifts/Index">Edit Shift</a></li>
                            <li><a href="/TimeOffs">Time Off Request</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @*<div id="rotate">Schedule</div>*@
    <div class="calendarSize" id="calendar"></div>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#calendar').fullCalendar({
                weekmode: 'liquid',
                firstDay: 3,
                events: "@Url.Action("GetCalendarEvents")"
            });
        });
    </script>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
